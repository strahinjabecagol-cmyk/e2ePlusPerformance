{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "tests/**/*.ts",
    "playwright.config.ts"
  ]
}

